<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PlatDetailActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" tools:srcCompat="@drawable/ic_image_placeholder"
            android:id="@+id/platDetailImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" android:contentDescription="TODO"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/platDetailNom"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/platDetailImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="center" android:textStyle="bold" android:textSize="30sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/platDetailIngredients"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="63dp" app:layout_constraintTop_toBottomOf="@+id/platDetailNom"
            android:textSize="20sp" android:paddingStart="16sp" android:paddingEnd="16sp" android:paddingTop="8sp"
            android:paddingBottom="8sp" tools:text="@string/ingredients_label"/>
    <TextView
            android:text="@string/prix_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/platDetailPrice"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/platDetailIngredients"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>